%h2.title クレジットカード情報入力
= form_tag("", method: :post, id: 'charge-form',  name: "inputForm") do
  .card__number
    %label カード番号
    %span.need 必須
    = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text"
  .expiration
  %label 有効期限
  %span.need 必須
  %select.exp_month{name: "exp_month", type: "text"}
    %option{value: ""} --
    %option{value: "1"}1
    %option{value: "2"}2
    %option{value: "3"}3
    %option{value: "4"}4
    %option{value: "5"}5
    %option{value: "6"}6
    %option{value: "7"}7
    %option{value: "8"}8
    %option{value: "9"}9
    %option{value: "10"}10
    %option{value: "11"}11
    %option{value: "12"}12
  %span 月
  %select.exp_year{name: "exp_year", type: "text"}
    %option{value: ""} --
    %option{value: "2020"}20
    %option{value: "2021"}21
    %option{value: "2022"}22
    %option{value: "2023"}23
    %option{value: "2024"}24
    %option{value: "2025"}25
    %option{value: "2026"}26
    %option{value: "2027"}27
    %option{value: "2028"}28
    %option{value: "2029"}29
    %option{value: "2030"}30
  %span  年
  .security__code
  %label セキュリティーコード
  %span.need 必須
  = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
  .question
    %span.form__question ? 
    %span カードの裏面の番号とは？
  #card_token
  = submit_tag "追加する", id: "token_submit"
